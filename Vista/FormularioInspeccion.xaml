        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:behaviours="clr-namespace:MahApps.Metro.Behaviours;assembly=MahApps.Metro"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:sys="clr-namespace:System;assembly=mscorlib" 
        xmlns:local="clr-namespace:Vista"
        mc:Ignorable="d"
        Title="Formulario"  Height="648" Width="850"  WindowTitleBrush="Black" ResizeMode="NoResize" Icon="imagenes/logo2.jpg" WindowStartupLocation="CenterScreen" TitleCharacterCasing="Normal"  BorderBrush="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}" GlowBrush="Black" NonActiveBorderBrush="#FF0A0202" WindowTransitionsEnabled="False" BorderThickness="0" FontWeight="Bold" >

    <Grid Background="#FFDCDDDF" Margin="0,0,-4.667,-457">
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto" Margin="-6,0,6.334,428">
            <Grid Height="1065" Width="820">

                <GroupBox x:Name="ContenedorPrincipal" Header="                                                                                                                          Informe Técnico" HorizontalAlignment="Left" Margin="35,10,0,0" VerticalAlignment="Top" Height="1026" Width="761" Background="#CC0C5395" Controls:ControlsHelper.ContentCharacterCasing="Upper" Controls:ControlsHelper.HeaderFontSize="10" TextOptions.TextHintingMode="Animated">
                    <Grid HorizontalAlignment="Left" Height="543" Margin="10,0,0,0" VerticalAlignment="Top" Width="724">
                        <Label x:Name="label" Content="Fecha Solicitud:" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top"/>
                        <DatePicker x:Name="dtfechaSol"  HorizontalAlignment="Left" Margin="143,12,0,0" VerticalAlignment="Top"  SelectedDate="{x:Static sys:DateTime.Now}"/>
                        <Label x:Name="label1" Content="Fecha Inspección:" HorizontalAlignment="Left" Margin="340,10,0,0" VerticalAlignment="Top"/>
                        <DatePicker x:Name="dtfechaIns"  HorizontalAlignment="Left" Margin="470,12,0,0" VerticalAlignment="Top" SelectedDate="{x:Static sys:DateTime.Now}"/>
                        <GroupBox x:Name="groupBox1" Header="Datos del Cliente" HorizontalAlignment="Left" Margin="28,51,0,0" VerticalAlignment="Top" Height="108" Width="652" Background="#CC0C5395" mah:ControlsHelper.ContentCharacterCasing="Upper" Controls:ControlsHelper.HeaderFontSize="10" FontSize="13.333">
                            <Grid HorizontalAlignment="Left" Height="88" Margin="10,0,0,0" VerticalAlignment="Top" Width="615">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="39*"/>
                                </Grid.ColumnDefinitions>
                                <Label x:Name="label2" Content="Nombre:" HorizontalAlignment="Left" Margin="14,4,0,0" VerticalAlignment="Top" FontSize="12" Grid.ColumnSpan="2"/>
                                <TextBox x:Name="txtNombreCliente" mah:TextBoxHelper.Watermark="Ingrese Nombre Completo" Height="8" Margin="97,4,49,0" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Normal" mah:TextBoxHelper.ClearTextButton="True" Grid.Column="1"/>
                                <Label x:Name="label3" Content="Rut:" HorizontalAlignment="Left" Margin="14,36,0,27" Grid.ColumnSpan="2"/>
                                <TextBox x:Name="txtRutCliente" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Ingrese Rut" Height="8" Margin="98,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" FontWeight="Normal" mah:TextBoxHelper.ClearTextButton="True" Grid.Column="1"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox x:Name="groupBox2" Header="Identificación de la Vivienda" HorizontalAlignment="Left" Margin="28,167,0,0" VerticalAlignment="Top" Height="197" Width="652" Background="#CC0C5395" mah:ControlsHelper.ContentCharacterCasing="Upper" Controls:ControlsHelper.HeaderFontSize="10">
                            <Grid Margin="0,0,0,9.333">
                                <Label x:Name="label4" Content="Dirección:" HorizontalAlignment="Left" Margin="14,4,0,0" VerticalAlignment="Top"/>
                                <TextBox x:Name="txtDireccion" mah:TextBoxHelper.Watermark="Ingrese Dirección" Height="8" TextWrapping="Wrap" VerticalAlignment="Top" FontWeight="Normal"  mah:TextBoxHelper.ClearTextButton="True" Margin="137,4,61,0"/>
                                <Label x:Name="label5" Content="Constructora:" HorizontalAlignment="Left" Margin="14,105,0,18"/>
                                <TextBox x:Name="txtNumero" HorizontalAlignment="Left" mah:TextBoxHelper.Watermark="Ingrese nombre Constructora" Height="8" TextWrapping="Wrap" VerticalAlignment="Top" Width="444" FontWeight="Normal" mah:TextBoxHelper.ClearTextButton="True" Margin="137,107,0,0"/>
                                <Label x:Name="label6" Content="Comuna:" HorizontalAlignment="Left" Margin="14,41,0,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="cbComuna" Margin="137,41,362,0" VerticalAlignment="Top" FontWeight="Normal"/>
                                <Label x:Name="label7" Content="Tipo de Vivienda:" Margin="14,75,520,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="cbTipoV" Margin="137,75,362,0" VerticalAlignment="Top" FontWeight="Normal"/>
                                <Label x:Name="label8" Content="Tipo de Agrupamiento:" Margin="298,75,204,0" VerticalAlignment="Top"/>
                                <ComboBox x:Name="cbTipoAg" Margin="447,75,61,0" VerticalAlignment="Top" FontWeight="Normal"/>
                            </Grid>
                        </GroupBox>
                    </Grid>
                </GroupBox>

            </Grid>
        </ScrollViewer>

    </Grid>
</Controls:MetroWindow>
